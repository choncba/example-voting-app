pipeline {
    agent any
    tools{
        maven "3.6.1"	
    }
    
    stages {
        stage('build') {
            steps {
                echo 'Compiling worker file'
                dir('worker'){
                    sh 'mvn compile'
                }
            }
        
        stage('test') {
            steps {
                echo 'Running Unit Tests on Worker App'
                
            }
        }
        
        stage('package') {
            steps {
                echo 'Packaging Worker App'
                
            }
        }
    }
    
    post{
        always{
            echo 'Build pipeline for Worker App is complete!'
        }
    }
}
