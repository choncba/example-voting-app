pipeline {
    agent any

    tools{
        maven "Maven 3.6.1"	
    }
    
    stages {
        stage('build') {
            steps {
                echo 'Compiling worker file'
                dir('worker'){
                    sh 'mvn compile'
                }
            }
        }
        
        stage('test') {
            steps {
                echo 'Running Unit Tests on Worker App'
                dir('worker'){
                    sh 'mvn clean test '
                }
            }
        }
        
        stage('package') {
            steps {
                echo 'Packaging Worker App'
                dir('worker'){
                    sh 'mvn package'
                }
            }
        }
    }
    
    post{
        always{
            echo 'Pipeline for Worker App is complete!'
            }
        }
    }
}
